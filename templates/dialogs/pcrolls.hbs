<form>
	<div class="form-group roll-group">
        <div>
            {{localize 'GW.Bane'}}
            <a class="item-control minus" onclick="handleDecrement()">
                <i class="fas fa-minus"></i>
            </a>
            {{#if (isBane hasBane)}}
                <input id="boonbane" name="boonbane" type="number" data-dtype="Number" value="-1">
            {{else}}
                <input id="boonbane" name="boonbane" type="number" data-dtype="Number" value="0">
            {{/if}}
            <a class="item-control plus"  onclick="handleIncrement()">
                <i class="fas fa-plus"></i>
            </a>
            {{localize 'GW.Boon'}}
        </div> 
    </div>
</form>

<script>
    bbField = document.getElementById("boonbane");
    var count = bbField.value;

    function handleIncrement() {
        count++;
        bbField.value = count;
    };

    function handleDecrement() {
        count--;
        bbField.value = count;
    };
</script>
